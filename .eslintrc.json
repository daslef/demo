{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "globals": {
        "webix": true,
        "scheduler": true,
        "APPNAME": true,
        "VERSION": true,
        "PRODUCTION": true,
        "BUILD_AS_MODULE": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    }
}
